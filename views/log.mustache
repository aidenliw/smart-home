{{>header}}

{{>navigation}}

<div class="container overflow-auto">
	<div class="text-center">
		<div class="header">
			<h1 class="display-4">Log</h1>
		</div>
		<a href="/log/deleteall" class="btn btn-danger mb-3" style="width: 8rem;">Clear All Logs</a>
		<ol class="list-group">
			{{#logs}}
			<li class="list-group-item">
				<div class="row ms-2 me-auto">
					<div class="col-sm-10 mb-3 mb-sm-0">
						{{time}}
						<div class="fw-bold">{{log}}</div>
					</div>
					<div class="col-sm-2 mb-3 mb-sm-0">
						<a class="btn btn-outline-danger btn-sm" href="/log/delete/{{id}}">Delete</a>
					</div> 
				</div>
			</li>
			{{/logs}}
		</ol>
	</div>
</div>

{{>footer}}
